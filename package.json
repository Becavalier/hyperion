{
  "name": "hyperion",
  "version": "1.0.5",
  "private": true,
  "hexo": {
    "version": "5.4.0"
  },
  "scripts": {
    "build": "hexo clean && hexo g && cp -R extra/ public/ && npm run generate-sw",
    "serve": "node ./services/www/index.js",
    "daemon": "pm2 start ./process.yml",
    "generate-sw": "workbox generateSW build/workbox-config.js",
    "sync": "git pull --rebase origin master && pm2 reload all && nginx -s reload -c /www/Hyperion/nginx.conf",
    "preview": "cd ./public && browser-sync start --server --files .",
    "nginx-bp": "nginx -c $(pwd)/nginx.conf",
    "update-ssl": "nginx -s stop && sudo certbot certonly --webroot && npm run nginx-bp",
    "build-in-container": "docker build -t hyperion-build-container ./build && systemctl enable cgconfig && docker run -it --rm -w/app --device-read-iops /dev/xvda:200 --device-read-bps /dev/xvda:20MB --device-write-bps /dev/xvda:20MB -v /www/Hyperion:/app hyperion-build-container"
  },
  "dependencies": {
    "apollo-server-express": "^2.14.2",
    "basic-auth": "^2.0.1",
    "compression": "^1.7.4",
    "dayjs": "^1.10.6",
    "escape-html": "^1.0.3",
    "express": "^4.16.4",
    "express-enforces-ssl": "^1.1.0",
    "express-session": "^1.17.2",
    "graphql": "^15.5.1",
    "helmet": "^3.23.3",
    "hexo": "^5.4.0",
    "hexo-generator-archive": "^1.0.0",
    "hexo-generator-category": "^1.0.0",
    "hexo-generator-feed": "^3.0.0",
    "hexo-generator-index": "^2.0.0",
    "hexo-generator-sitemap": "^2.1.0",
    "hexo-generator-tag": "^1.0.0",
    "hexo-prism-plugin": "git://github.com/Becavalier/hexo-prism-plugin.git",
    "hexo-renderer-jade": "^0.5.0",
    "hexo-renderer-marked": "^4.1.0",
    "hexo-renderer-stylus": "^2.0.1",
    "hexo-server": "^2.0.0",
    "mysql2": "^2.3.0",
    "rand-token": "^1.0.1",
    "sequelize": "^5.22.4",
    "workbox-cli": "^4.3.1"
  },
  "devDependencies": {
    "csso": "^3.5.1",
    "uglify-es": "^3.3.9"
  }
}